{
  "manifest_version": 3,
  "name": "PKM365 Publisher",
  "version": "1.0.0",
  "description": "Quickly publish HTML content from Claude Artifacts or Gemini Canvas to your GitHub Pages site",
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "host_permissions": [
    "https://n8n.pkm365.com/*"
  ]
}
